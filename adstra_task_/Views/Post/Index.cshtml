@model IEnumerable<adstra_task.Core.AuthorPost>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}

<h1>Shared Info</h1>

<p>
    <a asp-action="Create"> new post</a>
</p>
<form method="get" asp-action="Search">
    <input type="search" name="SearchItem" class="search-field" />
    <input type="submit" value="Search" class="search-field" />
</form>
<br/>
<table class="table table-striped hover">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.postCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDescraption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            
             
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDescraption)
            </td>
            <td>
                <img src="~/Image/@item.PostImageUrl" class="rounded-circle" width="50" height="50" /> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
