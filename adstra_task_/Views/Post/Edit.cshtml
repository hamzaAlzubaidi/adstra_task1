@model adstra_task.Core.AuthorPost

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>AuthorPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                
                <input type="hidden" asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="postCategory" class="control-label"></label>
                <input asp-for="postCategory" class="form-control" />
                <span asp-validation-for="postCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostDescraption" class="control-label"></label>
                <textarea asp-for="PostDescraption" class="form-control"></textarea>
                <span asp-validation-for="PostDescraption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostImageUrl"  class="control-label"></label>
                <input asp-for="PostImageUrl" type="file" class="form-control" />
                <span asp-validation-for="PostImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="AddedDate" type="hidden" class="form-control" />
               
            </div>
            <div class="form-group">
               
                <input asp-for="AuthorId" type="hidden" class="form-control" />
             
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
