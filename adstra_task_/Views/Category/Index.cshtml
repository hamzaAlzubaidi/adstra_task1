@model IEnumerable<adstra_task.Core.Category>

@{
    ViewData["Title"] = "Category List";
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}

<h1>Category</h1>

<p>
    <a  class="btn-primary" asp-action="Create">Create New</a>
</p>
<br/>
<form method="get" asp-action="Search">
  <input type="search" name="SearchItem" class="search-field" />
    <input type="submit" value="Search" class="search-field" />
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
